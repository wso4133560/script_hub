# 新建会话
tmux new -s <session-name>

# 分离会话
tmux detach

# 查看所有会话
tmux ls

# 加入某个会话
# 使用会话编号
$ tmux attach -t 0

# 使用会话名称
$ tmux attach -t <session-name>

# 切换会话
# 使用会话编号
$ tmux switch -t 0

# 使用会话名称
$ tmux switch -t <session-name>

# 重命名会话
tmux rename-session -t 0 <new-name>

# tmux split-window命令用来划分窗格。
# 划分上下两个窗格
$ tmux split-window

# 划分左右两个窗格
$ tmux split-window -h

